{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop-capability",
  "description": "Capability for desktop platform",
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "windows": [
    "zyper_main_window",
    "zyper_settings_window"
  ],
  "permissions": [
    "core:event:default",
    "core:path:default",
    "core:window:allow-set-always-on-top",
    "core:window:allow-is-always-on-top",
    "clipboard-manager:allow-write-text",
    "fs:allow-read-file",
    "os:allow-platform",
    "dialog:allow-open",
    "dialog:allow-message",
    "store:allow-get-store",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-delete"
  ]
}