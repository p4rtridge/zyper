{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zyper",
  "version": "0.1.0",
  "identifier": "com.zyper.app",
  "build": {
    "beforeDevCommand": "bun run dev:fe",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "zyper",
        "dragDropEnabled": true,
        "width": 800,
        "height": 600,
        "minWidth": 192,
        "minHeight": 192
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
